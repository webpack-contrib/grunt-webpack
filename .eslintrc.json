{
  "extends": ["eslint:recommended", "webpack", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "script"
  },
  "env": {
    "node": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-plusplus": "off",
    "global-require": "off",
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "no-underscore-dangle": "off"
  },
  "overrides": [
    { "files": "**/*.test.js", "parserOptions": { "sourceType": "module" } }
  ]
}
